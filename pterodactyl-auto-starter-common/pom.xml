<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>fr.farmvivi.pterodactyl-auto-starter</groupId>
        <artifactId>pterodactyl-auto-starter-parent</artifactId>
        <version>2.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>pterodactyl-auto-starter-common</artifactId>
    <name>PterodactylAutoStarter-Common</name>
    <description>Common module providing shared API and utilities for Pterodactyl Auto Starter</description>

    <dependencies>
        <!-- Adventure API -->
        <dependency>
            <groupId>net.kyori</groupId>
            <artifactId>adventure-api</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- Adventure Text Serializer ANSI -->
        <dependency>
            <groupId>net.kyori</groupId>
            <artifactId>adventure-text-serializer-ansi</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- ANSI -->
        <dependency>
            <groupId>net.kyori</groupId>
            <artifactId>ansi</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- BungeeCord Config -->
        <dependency>
            <groupId>net.md-5</groupId>
            <artifactId>bungeecord-config</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- Pterodactyl4J -->
        <dependency>
            <groupId>com.mattmalec</groupId>
            <artifactId>Pterodactyl4J</artifactId>
            <scope>compile</scope>
        </dependency>

        <!-- Test dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
</project>
